@{
    ViewData["Title"] = "Gestión de Ubicaciones";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="section-title">Gestión de Ubicaciones</h2>
        </div>
        <div class="col-md-4 text-end">
            <button id="btnAddLocation" class="btn btn-chronos">
                <i class="bi bi-plus-circle me-2"></i>Nueva Ubicación
            </button>
        </div>
    </div>

    <div class="card card-chronos mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Listado de Ubicaciones</h5>
            <div class="input-group input-group-chronos" style="width: 300px;">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" id="quickFilter" class="form-control form-control-chronos" placeholder="Buscar ubicaciones...">
            </div>
        </div>
        <div class="card-body">
            <div id="locationsTable"></div>
        </div>
    </div>
</div>

<!-- Modal para Crear/Editar Ubicación -->
<div class="modal fade" id="locationModal" tabindex="-1" aria-labelledby="locationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-green text-white">
                <h5 class="modal-title" id="locationModalLabel">Nueva Ubicación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="locationForm">
                    <input type="hidden" id="locationId" value="0">
                    <div class="mb-3">
                        <label for="locationName" class="form-label">Nombre</label>
                        <input type="text" class="form-control form-control-chronos" id="locationName" required>
                    </div>
                    <div class="mb-3">
                        <label for="locationDescription" class="form-label">Descripción (opcional)</label>
                        <textarea class="form-control form-control-chronos" id="locationDescription" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-chronos-outline" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-chronos" id="btnSaveLocation">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 para las notificaciones -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/jslocation/location.js"></script>
}