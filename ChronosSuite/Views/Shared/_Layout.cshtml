<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChronosSuite</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar bg-gradient-green">
            <div class="text-center p-2">
                <!-- Logo -->
                <i class="bi bi-clock-history display-4"></i>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a href="/Home" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                        <i class="bi bi-house-door"></i>
                        <span>Inicio</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/VisitRecord" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "VisitRecord" ? "active" : "")">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Registros</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/Visitor" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Visitor" ? "active" : "")">
                        <i class="bi bi-person-badge"></i>
                        <span>Visitantes</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/Company" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Company" ? "active" : "")">
                        <i class="bi bi-building"></i>
                        <span>Empresas</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/Employee" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Employee" ? "active" : "")">
                        <i class="bi bi-people"></i>
                        <span>Empleados</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/Location" class="sidebar-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Location" ? "active" : "")">
                        <i class="bi bi-geo-alt"></i>
                        <span>Ubicaciones</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="main">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <!-- Sidebar Toggle Button -->
                    <div class="toggle-btn" type="button" id="sidebarToggle">
                        <i class="bi bi-list fs-4"></i>
                    </div>
                    
                    <div class="d-flex ms-auto">
                        <!-- Dropdown de Usuario -->
                        <div class="dropdown">
                            <a class="btn dropdown-toggle d-flex align-items-center" href="#" role="button"
                                id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="me-2 d-none d-md-inline">@(User.Identity?.Name ?? "Usuario")</span>
                                <i class="bi bi-person-circle fs-4"></i>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/Login/SignOut" id="logout-link"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Content -->
            <div class="content-container">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/logoutHandler.js" asp-append-version="true"></script>
    
    <script>
        // Script para manejar el toggle del sidebar
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('sidebarToggle');
            const sidebar = document.querySelector('.sidebar');
            const main = document.querySelector('.main');
            
            toggleBtn?.addEventListener('click', function() {
                sidebar.classList.toggle('hidden');
                main.classList.toggle('full-width');
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
