@{
    ViewData["Title"] = "Gestión de Empresas";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="section-title">Gestión de Empresas</h2>
        </div>
        <div class="col-md-4 text-end">
            <button id="btnAddCompany" class="btn btn-chronos">
                <i class="bi bi-plus-circle me-2"></i>Nueva Empresa
            </button>
        </div>
    </div>

    <div class="card card-chronos mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Listado de Empresas</h5>
            <div class="input-group input-group-chronos" style="width: 300px;">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" id="quickFilter" class="form-control form-control-chronos" placeholder="Buscar empresas...">
            </div>
        </div>
        <div class="card-body">
            <div id="companiesTable"></div>
        </div>
    </div>
</div>

<!-- Modal para Agregar/Editar Empresa -->
<div class="modal fade" id="companyModal" tabindex="-1" aria-labelledby="companyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-green text-white">
                <h5 class="modal-title" id="companyModalLabel">Nueva Empresa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="companyForm">
                    <input type="hidden" id="companyId" value="0">
                    <div class="mb-3">
                        <label for="companyName" class="form-label">Nombre de la Empresa</label>
                        <input type="text" class="form-control form-control-chronos" id="companyName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-chronos-outline" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-chronos" id="btnSaveCompany">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jscompany/company.js"></script>
}