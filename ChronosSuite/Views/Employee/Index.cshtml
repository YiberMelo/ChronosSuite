@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="section-title">Gestión de Empleados</h2>
        </div>
        <div class="col-md-4 text-end">
            <button id="btnAddEmployee" class="btn btn-chronos">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Empleado
            </button>
        </div>
    </div>

    <div class="card card-chronos mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Listado de Empleados</h5>
            <div class="input-group input-group-chronos" style="width: 300px;">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" id="quickFilter" class="form-control form-control-chronos" placeholder="Buscar empleados...">
            </div>
        </div>
        <div class="card-body">
            <div id="employeesTable"></div>
        </div>
    </div>
</div>

<!-- Modal para Agregar/Editar Empleado -->
<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-gradient-green text-white">
                <h5 class="modal-title" id="employeeModalLabel">Nuevo Empleado</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <input type="hidden" id="employeeId" value="0">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="employeeFirstName" class="form-label">Nombre</label>
                            <input type="text" class="form-control form-control-chronos" id="employeeFirstName" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="employeeLastName" class="form-label">Apellido</label>
                            <input type="text" class="form-control form-control-chronos" id="employeeLastName" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="employeePosition" class="form-label">Cargo</label>
                        <input type="text" class="form-control form-control-chronos" id="employeePosition">
                    </div>
                    <div class="mb-3">
                        <label for="employeeEmail" class="form-label">Email</label>
                        <input type="email" class="form-control form-control-chronos" id="employeeEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeePhone" class="form-label">Teléfono</label>
                        <input type="tel" class="form-control form-control-chronos" id="employeePhone">
                    </div>
                    <div class="mb-3">
                        <label for="employeeCompany" class="form-label">Empresa</label>
                        <select class="form-select form-select-chronos" id="employeeCompany" required>
                            <option value="">Seleccione una empresa</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-chronos-outline" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-chronos" id="btnSaveEmployee">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jsemployee/employee.js"></script>
}